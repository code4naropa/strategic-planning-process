<nav id="main_navigation" class="primary_color">
  <div class="container-fluid">
    <div class="nav-wrapper row">
      <div class="col s12">
        <%= link_to root_path, class: 'brand-logo' do %>
          <%= image_tag "naropa_logo.png" %>
        <% end %>
        <a id="toggle_mobile_navigation" href="#" data-activates="mobile_navigation" class="button-collapse">
          <%= material_icon.menu %>
        </a>

        <ul class="right hide-on-med-and-down">

          <% if @current_user %>

            <li>
              <%= link_to "#" do %>
                <%= material_icon.account_circle.css_class('left') %> My Account
              <% end %>
            </li>

            <li>
              <%= link_to logout_path do %>
                <%= material_icon.power_settings_new.css_class('left') %> Log Out
              <% end %>
            </li>

          <% else %>

            <li>
              <%= link_to new_registration_path do %>
                <%= material_icon.person_add.css_class('left') %> Sign Up
              <% end %>
            </li>

            <li>
              <%= link_to login_path do %>
                <%= material_icon.vpn_key.css_class('left') %> Log In
              <% end %>
            </li>

          <% end %>
        </ul>


        <ul id="mobile_navigation" class="side-nav" >

          <%=
            @community ||= Democracy::Community.first
            render "shared/side_navigation/community"
          %>

          <li><div class="divider"></div></li>

          <% if @current_user %>

            <li>
              <%= link_to "#" do %>
                <%= material_icon.account_circle %> My Account
              <% end %>
            </li>

            <li>
              <%= link_to logout_path do %>
                <%= material_icon.power_settings_new %> Log Out
              <% end %>
            </li>

          <% else %>

            <li>
              <%= link_to new_registration_path do %>
                <%= material_icon.person_add %> Sign Up
              <% end %>
            </li>

            <li>
              <%= link_to login_path do %>
                <%= material_icon.vpn_key %> Log In
              <% end %>
            </li>

          <% end %>

        </ul>
      </div>
    </div>
  </div>
</nav>
